{
  "identity": {
    "name": "Silsilah Keluarga (Family Tree)",
    "persona": "E1: The Anti-AI Designer",
    "tone": "Warm, Nostalgic, Connected, Soft, Modern",
    "target_audience": "Indonesian Families documenting their heritage"
  },
  "typography": {
    "font_family": {
      "heading": "Fraunces, serif",
      "body": "Nunito, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "scale": {
      "h1": "text-4xl md:text-5xl font-bold tracking-tight",
      "h2": "text-3xl md:text-4xl font-semibold tracking-tight",
      "h3": "text-2xl md:text-3xl font-semibold",
      "body": "text-base md:text-lg leading-relaxed",
      "caption": "text-sm text-muted-foreground"
    },
    "imports": [
      "@fontsource/fraunces",
      "@fontsource/nunito"
    ]
  },
  "colors": {
    "palette": {
      "primary": {
        "DEFAULT": "#81B29A",
        "foreground": "#FFFFFF",
        "hover": "#6D9A84"
      },
      "secondary": {
        "DEFAULT": "#E07A5F",
        "foreground": "#FFFFFF",
        "hover": "#C86B52"
      },
      "background": "#FDFBF7",
      "foreground": "#3D405B",
      "muted": {
        "DEFAULT": "#F4F1DE",
        "foreground": "#8D909B"
      },
      "card": {
        "DEFAULT": "#FFFFFF",
        "foreground": "#3D405B"
      },
      "border": "#EAE6D8",
      "input": "#F4F1DE",
      "ring": "#81B29A"
    },
    "semantic": {
      "male": "#3D5A80",
      "female": "#EE6C4D",
      "deceased": "#989898"
    }
  },
  "visual_enhancers": {
    "radius": "rounded-2xl",
    "shadows": {
      "soft": "0 4px 20px -2px rgba(61, 64, 91, 0.05)",
      "hover": "0 10px 25px -5px rgba(61, 64, 91, 0.1)",
      "card": "0 1px 3px 0 rgba(0, 0, 0, 0.05), 0 1px 2px -1px rgba(0, 0, 0, 0.1)"
    },
    "glassmorphism": {
      "enabled": true,
      "classes": "bg-white/80 backdrop-blur-md border border-white/20 shadow-sm"
    },
    "textures": "Subtle paper grain overlay on background for nostalgic feel"
  },
  "layout": {
    "container": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8",
    "spacing": {
      "section": "py-12 md:py-20",
      "component": "p-6 md:p-8"
    },
    "grid": {
      "dashboard": "grid grid-cols-1 md:grid-cols-12 gap-6"
    }
  },
  "components": {
    "FamilyTreeCanvas": {
      "description": "Infinite canvas for the family tree. Pan and zoom enabled.",
      "library": "react-zoom-pan-pinch",
      "style": "w-full h-[calc(100vh-4rem)] bg-background cursor-grab active:cursor-grabbing relative overflow-hidden"
    },
    "NodeCard": {
      "description": "Card representing a family member.",
      "style": "w-64 bg-card rounded-2xl shadow-card hover:shadow-hover transition-all duration-300 border border-border flex flex-col items-center p-4 relative group",
      "elements": {
        "avatar": "w-20 h-20 rounded-full object-cover border-4 border-white shadow-sm mb-3",
        "name": "font-heading font-bold text-lg text-foreground text-center",
        "dates": "text-xs text-muted-foreground font-mono mb-2",
        "actions": "opacity-0 group-hover:opacity-100 transition-opacity absolute -bottom-4 flex gap-2"
      }
    },
    "FloatingControls": {
      "description": "Zoom, center, and export controls.",
      "style": "fixed bottom-8 right-8 flex flex-col gap-2 z-50"
    },
    "SearchBar": {
      "description": "Search family members with autocomplete.",
      "style": "fixed top-4 left-4 md:left-1/2 md:-translate-x-1/2 w-[90%] md:w-96 z-50 shadow-soft"
    }
  },
  "motion": {
    "transitions": "transition-all duration-300 ease-out",
    "animations": {
      "fadeIn": "animate-in fade-in duration-500",
      "slideUp": "animate-in slide-in-from-bottom-4 duration-500",
      "scaleIn": "animate-in zoom-in-95 duration-300"
    }
  },
